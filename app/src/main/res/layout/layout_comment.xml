<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="120dp">

                <ImageView
                    android:id="@+id/img_comment_profile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="#505050" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="6dp">

                <TextView
                    android:id="@+id/text_commentName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ayoub Es-sarghini"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_commentDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="March 11"
                    android:textColor="#7B7B7B"
                    android:textSize="11sp" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_delete_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="6dp"
                android:background="@android:color/transparent"
                android:src="@drawable/baseline_delete_outline_24" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_commentDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp"
            android:text="March 13"
            android:textColor="#444343"
            android:textSize="14sp" />
        <VideoView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#C4C4C4"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>